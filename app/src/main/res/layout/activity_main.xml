<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="*">
    <TableRow>
        <TextView
            android:layout_span="4"
            android:layout_height="100dp"
            android:hint="수식 또는 결과를 표시합니다"
            android:gravity="right|center"
            android:paddingRight="50dp"
            android:id="@+id/textView"/>
    </TableRow>
    <TableRow>
        <CheckBox
            android:layout_width="0dp"
            android:text="Advanced"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:id="@+id/chkBox"/>

        <Button
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:padding="0dp"
            android:layout_weight="1"
            android:text="MOD"
            android:visibility="invisible"
            android:id="@+id/btnMod"/>

        <Button
            android:layout_width="0dp"
            android:text="^"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_weight="1"
            android:id="@+id/btnPower"/>

        <Button
            android:layout_width="0dp"
            android:text="DELETE"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:id="@+id/btnDelete"/>
    </TableRow>

    <TableRow android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:id="@+id/btn7"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:id="@+id/btn8"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:id="@+id/btn9"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:id="@+id/btnDiv"></Button>
    </TableRow>

    <TableRow android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:id="@+id/btn4"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:id="@+id/btn5"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:id="@+id/btn6"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:id="@+id/btnMul"></Button>
    </TableRow>

    <TableRow android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:id="@+id/btn3"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:id="@+id/btn2"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:id="@+id/btn1"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:id="@+id/btnSub"></Button>
    </TableRow>

    <TableRow android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/btn0"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:id="@+id/btnPoint"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:id="@+id/btnEqual"></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:id="@+id/btnSum"></Button>
    </TableRow>
</TableLayout>